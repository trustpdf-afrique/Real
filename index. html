</div><script>
let storiesData = {};
let currentCountry = '';
let currentRegion = '';
if(localStorage.getItem('zakariaStories')) {
  storiesData = JSON.parse(localStorage.getItem('zakariaStories'));
}

function searchCountries(){
  const input = document.getElementById('searchSidebar').value.toLowerCase();
  document.querySelectorAll('#sidebar li').forEach(li => {
    li.style.display = li.textContent.toLowerCase().includes(input) ? 'block' : 'none';
  });
}

function openCountryPage(region,country){
  currentRegion = region;
  currentCountry = country;
  document.getElementById('main').classList.add('hidden');
  document.getElementById('countryPage').classList.remove('hidden');
  document.getElementById('countryTitle').innerText = country;
  renderStories();
}

function backToMain(){
  document.getElementById('main').classList.remove('hidden');
  document.getElementById('countryPage').classList.add('hidden');
  document.getElementById('title').value='';
  document.getElementById('tag').value='';
  document.getElementById('story').value='';
}

function addCountryStory(){
  const title = document.getElementById('title').value.trim();
  const tag = document.getElementById('tag').value.trim();
  const storyText = document.getElementById('story').value.trim();
  if(!title || !storyText){ alert('Remplis tous les champs !'); return; }
  if(!storiesData[currentRegion]) storiesData[currentRegion]={};
  if(!storiesData[currentRegion][currentCountry]) storiesData[currentRegion][currentCountry]=[];
  storiesData[currentRegion][currentCountry].push({title,tag,storyText});
  localStorage.setItem('zakariaStories',JSON.stringify(storiesData));
  document.getElementById('title').value='';
  document.getElementById('tag').value='';
  document.getElementById('story').value='';
  renderStories();
}

function renderStories(){
  const container = document.getElementById('stories');
  container.innerHTML='';
  if(storiesData[currentRegion] && storiesData[currentRegion][currentCountry]){
    storiesData[currentRegion][currentCountry].forEach((s,i)=>{
      const div = document.createElement('div');
      div.className='story';
      div.innerHTML=`<strong>${i+1} - ${s.title}</strong> <span class='tag'>${s.tag}</span><p>${s.storyText}</p>
      <button onclick='editStory(${i})'>Modifier</button>
      <button onclick='deleteStory(${i})'>Supprimer</button>`;
      container.appendChild(div);
    });
  }
}

function editStory(index){
  const s = storiesData[currentRegion][currentCountry][index];
  document.getElementById('title').value=s.title;
  document.getElementById('tag').value=s.tag;
  document.getElementById('story').value=s.storyText;
  storiesData[currentRegion][currentCountry].splice(index,1);
  localStorage.setItem('zakariaStories',JSON.stringify(storiesData));
  renderStories();
}

function deleteStory(index){
  if(confirm('Supprimer cette histoire ?')){
    storiesData[currentRegion][currentCountry].splice(index,1);
    localStorage.setItem('zakariaStories',JSON.stringify(storiesData));
    renderStories();
  }
}
</script></body>
</html>
